<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Layout">


    <com.gutierrez.diego.android_template.elements.TextViewElement
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MotorApp"
        android:textColor="@color/colorText"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/inpUsername"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:hint="Usuario"/>

    <EditText
        android:id="@+id/inpPassword"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textColorHighlight="@color/colorText"
        android:textColorLink="@color/colorText"
        android:shadowColor="@color/colorText"
        android:hint="Password"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:text="Ingresar"
        android:textSize="20dp"
        android:background="@color/colorText"
        android:textColor="@color/colorPrimary"
        android:id="@+id/btnLogin" />

</LinearLayout>
